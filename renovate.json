{
   "extends": [
      "github>nolte/gh-plumbing//renovate-configs/common#v1.0.7"
   ],
   "rebaseWhen": "conflicted",
   "helm-values": {
      "enabled": true
   },
   "helmv3": {
      "managerFilePatterns": [
         "/charts/stable/.+/Chart\\.yaml$/"
      ]
   },
   "packageRules": [
      {
         "matchDatasources": [
            "helm"
         ],
         "commitMessageTopic": "Helm chart {{depName}}",
         "separateMinorPatch": true
      },
      {
         "matchDatasources": [
            "github-tags"
         ],
         "matchPackageNames": [
            "potiuk/get-workflow-origin"
         ],
         "versioning": "regex:^v(?<major>\\d+)_(?<minor>\\d+)(_(?<patch>\\d+))?$"
      },
      {
         "commitMessagePrefix": "[{{{parentDir}}}]",
         "branchTopic": "{{{parentDir}}}-{{{depNameSanitized}}}-{{{newMajor}}}{{#if isPatch}}.{{{newMinor}}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}",
         "matchUpdateTypes": [
            "major"
         ],
         "bumpVersion": "major",
         "labels": [
            "dependency/major"
         ],
         "matchPackageNames": [
            "common"
         ],
         "groupName": "internal major dep"
      },
      {
         "matchUpdateTypes": [
            "minor"
         ],
         "bumpVersion": "minor",
         "labels": [
            "dependency/minor"
         ],
         "matchPackageNames": [
            "common"
         ],
         "groupName": "internal minor dep"
      },
      {
         "matchUpdateTypes": [
            "patch"
         ],
         "bumpVersion": "patch",
         "labels": [
            "dependency/patch"
         ],
         "matchPackageNames": [
            "common"
         ],
         "groupName": "internal patch dep"
      },
      {
         "commitMessagePrefix": "[{{{parentDir}}}]",
         "branchTopic": "{{{parentDir}}}-{{{depNameSanitized}}}-{{{newMajor}}}{{#if isPatch}}.{{{newMinor}}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}",
         "matchUpdateTypes": [
            "major"
         ],
         "bumpVersion": "major",
         "labels": [
            "dependency/major"
         ],
         "schedule": [
            "every 3 months on the first day of the month"
         ],
         "matchPackageNames": [
            "!common"
         ]
      },
      {
         "matchUpdateTypes": [
            "minor"
         ],
         "bumpVersion": "minor",
         "labels": [
            "dependency/minor"
         ],
         "groupName": "external minor dep",
         "schedule": [
            "every 2 months on the first day of the month"
         ],
         "matchPackageNames": [
            "!common"
         ]
      },
      {
         "matchUpdateTypes": [
            "patch"
         ],
         "bumpVersion": "patch",
         "labels": [
            "dependency/patch"
         ],
         "groupName": "external patch dep",
         "schedule": [
            "every 1 months on the first day of the month"
         ],
         "matchPackageNames": [
            "!common"
         ]
      }
   ]
}
